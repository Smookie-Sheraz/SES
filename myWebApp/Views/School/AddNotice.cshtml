@model myWebApp.ViewModels.School.NoticeVM
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Issue Notice</h4>
                        @*<p class="card-description">
                        Please Add New Employee and Press the Add Button.
                        </p>*@
                        <form class="forms-sample" method="post"
                              asp-controller="School" asp-action="AddNotice">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title">Title</label>
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Recipient">Recipient</label>
                                        <input type="text" class="form-control" asp-for="Recipient" placeholder="Enter Recipient">
                                        <span asp-validation-for="Recipient" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Date">Date</label>
                                        <input type="date" class="form-control" asp-for="Date" placeholder="Enter Date">
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Salutation">Salutation</label>
                                        <input type="text" class="form-control" asp-for="Salutation" placeholder="Enter Salutation">
                                        <span asp-validation-for="Salutation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Body">Body of Notice</label>
                                        <textarea class="form-control" asp-for="Body"></textarea>
                                        <span asp-validation-for="Body" class="text-danger"></span>
                                    </div>
                                    <div class="float-right mt-2">
                                        <a class="btn btn-light" asp-controller="School" asp-action="Notices">Cancel</a>
                                        <button type="submit" class="btn btn-primary mr-2">Issue</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
