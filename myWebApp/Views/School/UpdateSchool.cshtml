                      <label asp-for="Code">School Code</label>
                      <input type="text" class="form-control" asp-for="Code" placeholder="Enter School Code">
                      <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">School Description</label>
