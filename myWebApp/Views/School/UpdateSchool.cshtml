                    </div>
                    <div class="form-check">
                      <label class="form-check-label" asp-for="IsActive">
                      <input class="form-check-input" type="checkbox" value="" asp-for="IsActive">
                        Active
                      </label>
                    </div>
                    <div class="form-group">
                      <label asp-for="LocationId">Location Id</label>
                      <input type="text" class="form-control" asp-for="LocationId" placeholder="Enter Location Id">
                      <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>
                    <div class="float-right">
                    <a class="btn btn-light" asp-controller="School" asp-action="School">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
