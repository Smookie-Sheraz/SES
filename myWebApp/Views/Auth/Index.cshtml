@model myWebApp.ViewModels.Auth.LoginVM
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Seerat School</title>
	<!-- Bootstrap 5 CDN Link -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/css/loginpage.css" rel="stylesheet" />
	<!-- Custom CSS Link -->
	<link rel="stylesheet" href="style.css">
</head>
<body>
	<section class="wrapper">

		<div class="container d-flex align-items-center justify-content-center flex-wrap">
			<div class="box">
				<div class="body"
					@*<div class="imgContainer">
						@*<img src="~/images/seeratdisplayimage.jpg" alt="">
					</div>*@
					<div class="content d-flex flex-column align-items-center justify-content-center">
						<div>
							

							<div class="container d-flex">
								<div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 text-center" style="width: 400px;height: 400px;margin: 0;">
									@*<div class="logo">
										<img src="~/images/auth/logo.png" class="img-fluid" alt="Logo">
									</div>*@
									<form class="rounded bg-light shadow py-5 px-4" method="post" asp-controller="Auth" asp-action="Index">
										<h4 class="text-dark fw-bolder fs-4 mb-2">Sign In to <br /> Seerat Education System</h4>
										<div class="fw-normal text-muted mb-4"> New Here?
											<a asp-action="Signup" asp-controller="Auth" class="text-primary fw-bold text-decoration-none">Create an Account</a>
										</div>
										<div class="form-group mb-3">
											<label asp-for="Email" class="float-left">Email</label>
											<input type="email" class="form-control" asp-for="Email" placeholder="name@example.com" autocomplete="off"/>
										  <span asp-validation-for="Email" class="text-danger"></span>
										</div>
										<div class="form-group">
											<label asp-for="Password">Password</label>
											<input asp-for="Password" class="form-control" type="password" placeholder="Enter Password">
										  <span asp-validation-for="Password" class="text-danger"></span>
										</div>
															@if (ViewBag.LoginStatus == false)
															{
												<div class="form-floating">
												<h6 class="text-danger">Wrong Password!</h6>
											</div>
															}
										<div class="mt-2 text-end">
											<a asp-controller="Auth" asp-action="ForgotPassword" class="text-primary fw-bold text-decoration-none">Forget Password?</a>
										</div>
										<button type="submit" class="btn btn-primary submit_btn w-100 my-4">Login</button>

									</form>
								</div>
							</div>



						</div>
					</div>
				</div>
			</div>
		</div>




		
	</section>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
		<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</html>
