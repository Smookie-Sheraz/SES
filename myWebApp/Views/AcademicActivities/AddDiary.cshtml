@model myWebApp.ViewModels.AcademicActivities.DiaryVM
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Diary</h4>
                        @*<p class="card-description">
                        Please Add New Grade and Press the Add Button.
                        </p>*@
                        <form class="forms-sample" method="post"
                              asp-controller="AcademicActivities" asp-action="AddDiary">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ClassId">Class</label>
                                        <select asp-for="ClassId" class="form-select" onchange="GetDiarySubjects(this.id)" aria-label="Default select example">
                                            <option selected value="@null">Select Class Please</option>
                                            @foreach (var Class in ViewBag.Classes)
                                            {
                                                <option value="@Class.SectionId">@Class.SectionName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ClassId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SubjectId">Subject</label>
                                        <select asp-for="SubjectId" class="form-select" onchange="GetDiaryTests(this.id)" aria-label="Default select example">
                                            <option selected value="@null">Select Class First!</option>
                                        </select>
                                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TestId">Test</label>
                                        <select asp-for="TestId" class="form-select" aria-label="Default select example">
                                            <option selected value="@null">Select Subject First!</option>
                                        </select>
                                        <span asp-validation-for="TestId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ClassWork">Class Work</label>
                                        <input type="text" class="form-control" asp-for="ClassWork" placeholder="Enter Class Work">
                                        <span asp-validation-for="ClassWork" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="HomeWork">Home Work</label>
                                        <input type="text" class="form-control" asp-for="HomeWork" placeholder="Enter Home Work">
                                        <span asp-validation-for="HomeWork" class="text-danger"></span>
                                    </div>
                                    <div class="float-right mt-2">
                                        <a class="btn btn-light" asp-controller="AcademicActivities" asp-action="Diary">Cancel</a>
                                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/custom.js"></script>
}