@model Entities.ViewModels.UpdateBookVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Book</h4>
                  @*<p class="card-description">
                    Please Update Book and Press the Update Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="Grade" asp-action="UpdateBook" enctype="multipart/form-data">
                  <input type="hidden" asp-for="BookId"/>
                  <div class="row">
                    <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="BookName">Book Name</label>
                        <input type="text" class="form-control" asp-for="BookName" placeholder="Enter Book Name">
                        <span asp-validation-for="BookName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GradeId">Grade</label>
                        <select asp-for="GradeId" class="form-select" aria-label="Default select example">
                        <option selected>Select Grade Please</option>
                            @foreach (var grade in ViewBag.Grades)
                            {
                                <option value="@grade.GradeId">@grade.GradeName</option>
                            }
                    </select>
                      <span asp-validation-for="GradeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author">Author</label>
                        <input type="text" class="form-control" asp-for="Author" placeholder="Enter Author">
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Publisher">Publisher</label>
                        <input type="text" class="form-control" asp-for="Publisher" placeholder="Enter Publisher">
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublishDate">Publish Date</label>
                        <input type="date" class="form-control" asp-for="PublishDate" placeholder="Enter Publish Date">
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label asp-for="SubjectId">Subject</label>
                        <select asp-for="SubjectId" class="form-select" aria-label="Default select example">
                        <option selected>Select Subject Please</option>
                        @foreach (var subject in ViewBag.Subjects)
                        {
                            <option value="@subject.SubjectId">@subject.SubjectName</option>
                        }
                    </select>
                      <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ResourceNoteBookId">NoteBook</label>
                        <select asp-for="ResourceNoteBookId" class="form-select" aria-label="Default select example">
                        <option selected value="@null">Select NoteBook Please</option>
                                            @foreach (var noteBook in ViewBag.NoteBooks)
                                            {
                                    <option value="@noteBook.ResourceNoteBookId">@noteBook.NoteBookName</option>
                                            }
                    </select>
                      <span asp-validation-for="ResourceNoteBookId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ResourceBook">Resource Book</label>
                        <input type="text" class="form-control" asp-for="ResourceBook" placeholder="Enter Resource Book">
                        <span asp-validation-for="ResourceBook" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="ResourceBookURL"/>
                    <div class="form-group">
                        <a target="_blank" asp-route-path="@Url.Content(Model.ResourceBookURL)" asp-controller="Grade" asp-action="ViewResourceBook">@Model.ResourceBook</a>
                    </div>
                    <div class="form-group">
                        <label>Choose new Resource Book</label>
                        <input type="file" class="form-control" asp-for="NewResourceBookURL"/>
                        <span asp-validation-for="NewResourceBookURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label"><input type="checkbox" class="form-check-input" asp-for="IsWorkBook" />Workbook?</label>
                        </div>
                    </div>
                    <div class="form-group mt-2">
                    <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                        <option selected>Is Book Active</option>
                            <option value="@true">Yes</option>
                            <option value="@false">No</option>
                    </select>
                      <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="float-right mt-2">
                    <a class="btn btn-light" asp-controller="Grade" asp-action="Book">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                    </div>
                    </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

