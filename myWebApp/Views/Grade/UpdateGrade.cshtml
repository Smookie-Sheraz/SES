@model Entities.ViewModels.UpdateGradeVM
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Grade</h4>
                        @*<p class="card-description">
                        Please Add New Grade and Press the Add Button.
                        </p>*@
                        <form class="forms-sample" method="post"
                              asp-controller="Grade" asp-action="UpdateGrade">
                            <input type="hidden" asp-for="GradeId" />
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="SchoolSectionId">Subject</label>
                                        <select asp-for="SchoolSectionId" class="form-select" onchange="GetGradeManagers(this.id)" aria-label="Default select example">
                                            <option selected value="@null">Select School Section Please</option>
                                            @foreach (var sSection in ViewBag.SchoolSections)
                                            {
                                                <option value="@sSection.SchoolSectionId">@sSection.SectionName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SchoolSectionId" class="text-danger"></span>
                                    </div>
                                    @if (User.IsInRole("Assistant Coordinator") || User.IsInRole("Deputy Coordinator") || User.IsInRole("Director Academics"))
                                    {
                                        <div class="form-group">
                                            <label asp-for="GradeManagerId">Grade Manager</label>
                                            <select asp-for="GradeManagerId" class="form-select" aria-label="Default select example">
                                                <option selected value="@null">Select Section First!</option>
                                                @*@foreach (var sSection in ViewBag.GradeManagers)
                                            {
                                            <option value="@sSection.EmployeeId">@sSection.FName @sSection.LName</option>
                                            }*@
                                            </select>
                                            <span asp-validation-for="GradeManagerId" class="text-danger"></span>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label asp-for="GradeName">Grade Name</label>
                                        <input type="text" class="form-control" asp-for="GradeName" placeholder="Enter Grade Name">
                                        <span asp-validation-for="GradeName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-2">
                                        <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                                            <option selected>Is Grade Active</option>
                                            <option value="@true">Yes</option>
                                            <option value="@false">No</option>
                                        </select>
                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>
                                    <div class="float-right mt-2">
                                        <a class="btn btn-light" asp-controller="Grade" asp-action="Grade">Cancel</a>
                                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/custom.js"></script>
}