@model Entities.ViewModels.UpdateSectionVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Subject</h4>
                  @*<p class="card-description">
                    Please Update Subject and Press the Update Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="Grade" asp-action="UpdateSection">
                  <input type="hidden" asp-for="SectionId"/>
                  <div class="row">
                      <div class="col-12 col-md-6">
                           <div class="form-group">
                      <label asp-for="SectionName">Subject Code</label>
                      <input type="text" class="form-control" asp-for="SectionName" placeholder="Enter Section Name">
                      <span asp-validation-for="SectionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <select asp-for="GradeId" class="form-select" aria-label="Default select example">
                      <option selected>Select Grade Please</option>
                                            @foreach (var grades in ViewBag.Grades)
                                            {
                                                 <option value="@grades.GradeId">@grades.GradeName</option>
                                            }
                    </select>
                      <span asp-validation-for="GradeId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                    <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                      <option selected value="@null">Is Section Active</option>
                          <option value="@true">Yes</option>
                          <option value="@false">No</option>
                    </select>
                      <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="float-right mt-2">
                    <a class="btn btn-light" asp-controller="Grade" asp-action="Section">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                    </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

