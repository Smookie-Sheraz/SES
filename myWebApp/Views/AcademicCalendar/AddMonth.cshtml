@model myWebApp.ViewModels.AcademicCalendar.MonthVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New Adacmic-Calendar --Month</h4>
                  <p class="card-description">
                    Please Add The New Adacmic-Calendar --Term and Press the Add Button.
                  </p>
                  <form class="forms-sample" method="post"
                  asp-controller="AcademicCalendar" asp-action="AddMonth">
                  <div class="row">
                      <div class="col-12 col-md-6">
                          <div class="form-group">
                      <label asp-for="TermId">Term</label>
                      <select asp-for="TermId" class="form-select" aria-label="Default select example">
                      <option selected>Select Term Please</option>
                                            @foreach (var term in ViewBag.Terms)
                                            {
                                          <option value="@term.TermId">@term.TermName</option>
                                            }
                    </select>
                      <span asp-validation-for="TermId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="StartDate">Start Date</label>
                      <input type="date" class="form-control" asp-for="StartDate" placeholder="Enter Start Date">
                      <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="EndDate">End Date</label>
                      <input type="date" class="form-control" asp-for="EndDate" placeholder="Enter End Date">
                      <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="SatSunday">No of Sat &amp; Sun</label>
                      <input type="text" class="form-control" asp-for="SatSunday" placeholder="Enter End Sat & Sun">
                      <span asp-validation-for="SatSunday" class="text-danger"></span>
                    </div>
                      </div>
                      <div class="col-12 col-md-6">
                          <div class="form-group">
                      <label asp-for="Event">Events</label>
                      <input type="text" class="form-control" asp-for="Event" placeholder="Enter Events">
                      <span asp-validation-for="Event" class="text-danger"></span>
                    </div>
                          <div class="form-group">
                      <label asp-for="EventDate">Event Date</label>
                      <input type="date" class="form-control" asp-for="EventDate" placeholder="Enter Event Date">
                      <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Holidays">No of Holidays</label>
                      <input type="text" class="form-control" asp-for="Holidays" placeholder="Enter Holidays">
                      <span asp-validation-for="Holidays" class="text-danger"></span>
                    </div>
                    <div class="float-right mt-4">
                    <a class="btn btn-light" asp-controller="AcademicCalendar" asp-action="Term">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                    </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

