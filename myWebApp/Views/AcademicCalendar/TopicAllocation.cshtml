@model myWebApp.ViewModels.AcademicCalendar.TopicAllocationTestVM
<div class="main-panel">
    <div class="content-wrapper">
        <form method="post" asp-controller="AcademicCalendar" asp-action="TopicAllocation">
            <div class="row">
                <input type="hidden" asp-for="PlanId" />
                <input type="hidden" asp-for="YearId" />
                <input type="hidden" asp-for="TermId" />
                <input type="hidden" asp-for="TeachingMethodologyId" />
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Topics of Chapter: <label class="badge badge-success">@ViewBag.ChapterName</label></h4>
                            @*<p class="card-description">
                            The Books allocated to the @ViewBag.Month !
                            </p>*@
                            <div class="row">
                                <div class="col-12">
                                    <div class="table-responsive">
                                        @if (Model.Topics.Any())
                                        {
                                            <table class="table table-hover" id="TopicsTable">
                                                <thead>
                                                    <tr>
                                                        <th colspan="1">Calendar Name: <label class="badge badge-success">@ViewBag.CalendarName</label></th>
                                                        <th colspan="1">Term Name: <label class="badge badge-success">@ViewBag.TermName</label></th>
                                                        <th colspan="2">Book Name: <label class="badge badge-success">@ViewBag.BookName</label></th>
                                                        <th colspan="2">Unit Name: <label class="badge badge-success">@ViewBag.UnitName</label></th>
                                                        <th colspan="1">Teaching Methodology Name: <label class="badge badge-success">@ViewBag.TMName</label></th>
                                                    </tr>
                                                    <tr>
                                                        <th>Topic Name</th>
                                                        <th>Start Date</th>
                                                        <th>End Date</th>
                                                        @*<th>Teaching Method</th>*@
                                                        <th>Teaching Method Description</th>
                                                        <th>WB Start Page</th>
                                                        <th>WB End Page</th>
                                                        <th>Selection</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="d-none">
                                                        <td colspan="7">
                                                            <input type="hidden" asp-for="YearId" />
                                                            <input type="hidden" asp-for="TermId" />
                                                            <input type="hidden" asp-for="ChapterId" />
                                                        </td>
                                                    </tr>
                                                    @for (var i = 0; i < Model.Topics.Count(); i++)
                                                    {
                                                        <tr class="tb-data">
                                                            <td>@Model.Topics[i].TopicName</td>
                                                            <td>
                                                                <div class="form-group">
                                                                    <input type="date" class="form-control text-center start-date" oninput="check(this.id)" asp-for="@Model.Topics[i].StartDate" placeholder="Enter Start Date" min="@Convert.ToDateTime(@Model.MinDate).ToString("yyyy-MM-dd")" max="@Convert.ToDateTime(Model.MaxDate).ToString("yyyy-MM-dd")">
                                                                    <span asp-validation-for="@Model.Topics[i].StartDate" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group">
                                                                    <input type="date" class="form-control text-center end-date" asp-for="@Model.Topics[i].EndDate" placeholder="Enter End Date" min="@Convert.ToDateTime(Model.MinDate).ToString("yyyy-MM-dd")" max="@Convert.ToDateTime(Model.MaxDate).ToString("yyyy-MM-dd")">
                                                                    <span asp-validation-for="@Model.Topics[i].EndDate" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group">
                                                                    <input type="text" class="form-control" asp-for="@Model.Topics[i].TeachingMethodologyDesc" placeholder="Enter Teaching Method Description" />
                                                                    <span asp-validation-for="@Model.Topics[i].TeachingMethodologyDesc" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                            @if (Model.Topics[i].WBMinPage == null || Model.Topics[i].WBMaxPage == null)
                                                            {
                                                                <td>
                                                                    <div class="form-group">
                                                                        <input type="number" disabled min="@Model.Topics[i].WBMinPage" max="@Model.Topics[i].WBMaxPage" class="form-control text-center" asp-for="@Model.Topics[i].WorkBookStartPage" placeholder="Enter Start Page" />
                                                                        <span asp-validation-for="@Model.Topics[i].WorkBookStartPage" class="text-danger"></span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="form-group">
                                                                        <input type="number" disabled min="@Model.Topics[i].WBMinPage" max="@Model.Topics[i].WBMaxPage" class="form-control text-center" asp-for="@Model.Topics[i].WorkBookEndPage" placeholder="Enter Start Page" />
                                                                        <span asp-validation-for="@Model.Topics[i].WorkBookEndPage" class="text-danger"></span>
                                                                    </div>
                                                                </td>
                                                            }
                                                            else
                                                            {
                                                                <td>
                                                                    <div class="form-group">
                                                                        <input type="number" min="@Model.Topics[i].WBMinPage" max="@Model.Topics[i].WBMaxPage" class="form-control text-center" asp-for="@Model.Topics[i].WorkBookStartPage" placeholder="Enter Start Page" />
                                                                        <span asp-validation-for="@Model.Topics[i].WorkBookStartPage" class="text-danger"></span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <div class="form-group">
                                                                        <input type="number" min="@Model.Topics[i].WBMinPage" max="@Model.Topics[i].WBMaxPage" class="form-control text-center" asp-for="@Model.Topics[i].WorkBookEndPage" placeholder="Enter Start Page" />
                                                                        <span asp-validation-for="@Model.Topics[i].WorkBookEndPage" class="text-danger"></span>
                                                                    </div>
                                                                </td>
                                                            }
                                                            <td>
                                                                        <input type="hidden" asp-for="@Model.Topics[i].TopicId" />
                                                                <div class="form-check">
                                                                    <label class="form-check-label">
                                                                        <input type="checkbox" class="form-check-input" asp-for="@Model.Topics[i].Check" />
                                                                        Select
                                                                    </label>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <h3>Please Allocate Chapter(s) to The month First!</h3>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Topics.Count() > 0)
                {
                    <div class="col-2 offset-10">
                        <button type="submit" asp-for="TopicAllocation(@Model.Topics)" class="btn btn-primary mr-2">Allocate</button>
                    </div>
                }
            </div>
        </form>
    </div>
</div>

