<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Plan Approvals</h4>
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        @*@if(User.HasClaim("Permission","Term.Update") || User.HasClaim("Permission","Term.Delete") || User.HasClaim("Permission","Holidays.Read")){
                                        <th>Actions</th>
                                        }*@
                                        <th>Status</th>
                                        <th>Plan Name</th>
                                        <th>Planned By</th>
                                        @*<th>Submit for Approval</th>*@
                                        <th>Approval Status</th>
                                        <th>Plan Details</th>
                                    </tr>
                                </thead>
                                <tbody class="term-data">
                                    @foreach (var plan in ViewBag.Plans)
                                    {
                                        <tr>
                                            @*<td class="actions">
                                                 @if (User.HasClaim("Permission", "Term.Update"))
                                            {
                                                <a class="fa fa-edit mr-3" asp-route-AcademicPlanningId="@plan.AcademicPlanningsId" title="Edit Plan" asp-controller="AcademicCalendar" asp-action="UpdateAcademicPlanning" role="button"></a>
                                                @*}
                                            @if (User.HasClaim("Permission", "Term.Delete"))
                                            {
                                                <a class="fa fa-trash text-danger" title="Delete Plan" onclick="return confirm('Are you sure you want to delete?');" asp-route-AcademicPlanningId="@plan.AcademicPlanningsId" asp-controller="AcademicCalendar" asp-action="DeleteAcademicPlanning" role="button"></a>
                                                @*}
                                        </td>*@
                                            <td>
                                                @if ((bool)plan.IsActive)
                                                {
                                                    <label class="badge badge-success">Active</label>
                                                }
                                                else
                                                {
                                                    <label class="badge badge-danger">InActive</label>
                                                }
                                            </td>
                                            <td>@plan.PlanName</td>
                                            <td>@plan.PlannedBy</td>
                                            @*<td>
                                                <a target="_blank" asp-controller="AcademicCalendar" asp-action="PlanApprovalSubmit" asp-route-PlanId="@plan.AcademicPlanningsId" class="btn btn-outline-info btn-sm">Submit Plan</a>
                                            </td>*@
                                            <td>
                                                @if (plan.Status == "Approved")
                                                {
                                                    <label class="badge badge-success">Approved</label>
                                                }
                                                else if (plan.Status == "Rejected")
                                                {
                                                    <label class="badge badge-danger">Rejected</label>
                                                }
                                                else
                                                {
                                                    <label class="badge badge-warning">Pending</label>
                                                }
                                            </td>
                                            <td>
                                                <a target="_blank" asp-controller="AcademicCalendar" asp-action="PlanDetails" asp-route-PlanId="@plan.AcademicPlanningsId" class="btn btn-outline-info btn-sm">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/custom.js"></script>
}