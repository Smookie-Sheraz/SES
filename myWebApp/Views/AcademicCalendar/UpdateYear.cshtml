@model myWebApp.ViewModels.AcademicCalendar.UpdateYearVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Academic Year</h4>
                  @*<p class="card-description">
                    Please Update The Academic Year and Press the Update Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="AcademicCalendar" asp-action="UpdateYear">
                  <input type="hidden" asp-for="YearId"/>
                  <div class="form-group">
                      <label asp-for="YearName">Year Name</label>
                      <input type="text" class="form-control" asp-for="YearName" placeholder="Enter Start Date">
                      <span asp-validation-for="YearName" class="text-danger"></span>
                    </div>
                      <div class="form-group">
                      <label asp-for="StartDate">Start Date</label>
                      <input type="date" class="form-control" asp-for="StartDate" placeholder="Enter Start Date">
                      <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="EndDate">End Date</label>
                      <input type="date" class="form-control" asp-for="EndDate" placeholder="Enter End Date">
                      <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                            <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                                <option selected value="@null">Is Year Active</option>
                                    <option value="@true">Yes</option>
                                    <option value="@false">No</option>
                            </select>
                        </div>
                    <div class="float-right mt-4">
                    <a class="btn btn-light" asp-controller="AcademicCalendar" asp-action="Year">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

