@model myWebApp.ViewModels.Setups.HeadVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New Head of Sub-Department</h4>
                  @*<p class="card-description">
                    Please Add Head of The Sub-Department and Press the Add Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="Setup" asp-action="AddHead">
                  <div class="row justify-content-between">
                      <div class="col-12 col-md-6">
                          <div class="form-group">
                    @*<select asp-for="SubDepartmentId" class="form-select" aria-label="Default select example">
                      <option selected>Select Sub-Department Please</option>
                            @foreach (var subd in ViewBag.SubDepartments)
                            {
                                <option value="@subd.SubDepartmentId">@subd.DepartmentName</option>
                            }
                    </select>*@
                    </div>
                    <div class="form-group">
                    <select class="form-select" aria-label="Default select example" id="head-from" onchange="SelectHeadFrom()">
                      <option selected value="3">Select Head From</option>
                                            
                                    <option value="1">Shoora</option>
                                    <option value="2">Employees</option>
                    </select>
                    </div>
                          <div class="form-group" style="display:none" id="shoora">
                    <select asp-for="ShooraId" class="form-select" aria-label="Default select example">
                      <option selected>Select From Shoora</option>
                        @foreach (var head in ViewBag.ShooraMembers)
                        {
                          <option value="@head.ShooraId">@head.FName @head.LName</option>
                        }
                    </select>
                    </div>
                    <div class="form-group" style="display:none" id="employee">
                    <select asp-for="EmployeeId" class="form-select" aria-label="Default select example">
                      <option selected>Select From Employees</option>
                       @foreach (var head in ViewBag.Employees)
                         {
                           <option value="@head.EmployeeId">@head.FName @head.LName</option>
                         }
                    </select>
                    </div>
                    @* <div class="form-group mt-2">
                    <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                      <option selected>Is Head Active</option>
                          <option value="1">Yes</option>
                          <option value="0">No</option>
                    </select>
                    </div>*@
                    <div class="float-right">
                    <a class="btn btn-light" asp-controller="Setup" asp-action="Head">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                    </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

@section scripts{
                    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
                        <script>  
                           function SelectHeadFrom(){
                                  var EmployeeType = $('#head-from').find(":selected").val();
                                   if(EmployeeType == 1){
                                        $('#employee').css('display','none');
                                        $('#shoora').css('display','block');
                                   }
                                   else if(EmployeeType == 2){
                                        $('#shoora').css('display','none');
                                        $('#employee').css('display','block');
                                   }
                                   else{
                                        $('#shoora').css('display','none');
                                        $('#employee').css('display','none');
                                   }
                           } 

                        </script>
}