@model myWebApp.ViewModels.Setups.SubDepartmentVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New Sub-Department</h4>
                  @*<p class="card-description">
                    Please Add The New Sub-Department and Press the Add Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="Setup" asp-action="AddSubDepartment">
                  <div class="row justify-content-between">
                      <div class="col-12 col-md-6">
                          <div class="form-group">
                      <label asp-for="DepartmentName">Sub-Department Name</label>
                      <input type="text" class="form-control" asp-for="DepartmentName" placeholder="Enter Department">
                      <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <select asp-for="MainDepartmentId" class="form-select" aria-label="Default select example">
                      <option selected value="@null">Select Department Please</option>
                                            @foreach (var department in ViewBag.Departments)
                                            {
                                         <option value="@department.DepartmentId">@department.DepartmentName</option>
                                            }
                    </select>
                      <span asp-validation-for="MainDepartmentId" class="text-danger"></span>
                    </div>
                          <div class="form-group">
                    <select asp-for="HeadId" class="form-select" aria-label="Default select example">
                      <option selected value="@null">Select Department Head Please</option>
                            @foreach (var head in Model.heads)
                            {
                                @if(head.EmployeeName == null)
                                {
                                    <option value="@head.HeadId">@head.ShooraName - Shoora</option>
                                                    
                                }
                                else
                                {
                                    <option value="@head.HeadId">@head.EmployeeName - Employee</option>
                                }
                            }
                    </select>
                      <span asp-validation-for="HeadId" class="text-danger"></span>
                    </div>
                    <div class="float-right">
                    <a class="btn btn-light" asp-controller="Setup" asp-action="SubDepartment">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                    </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

@section scripts{
                <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}