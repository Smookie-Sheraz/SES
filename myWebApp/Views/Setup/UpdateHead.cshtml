@model myWebApp.ViewModels.Setups.UpdateHeadVM
@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Head of Sub-Department</h4>
                  @*<p class="card-description">
                    Please Update Head of The Sub-Department and Press the Update Button.
                  </p>*@
                  <form class="forms-sample" method="post"
                  asp-controller="Setup" asp-action="UpdateHead">
                  <input type="hidden" asp-for="Headid"/>
                  <div class="row justify-contetn-around">
                      <div class="col-12 col-md-6">
                          <div class="form-group">
                    <select asp-for="ShooraId" class="form-select" aria-label="Default select example">
                      <option selected>Select From Shoora</option>
                                            @foreach (var head in ViewBag.ShooraMembers)
                                            {
                                             <option value="@head.ShooraId">@head.FName @head.LName</option>
                                            }
                    </select>
                    </div>
                    <div class="form-group">
                    <select asp-for="EmployeeId" class="form-select" aria-label="Default select example">
                      <option selected>Select From Employees</option>
                                            @foreach (var head in ViewBag.Employees)
                                            {
                                                 <option value="@head.EmployeeId">@head.FName @head.LName</option>
                                            }
                    </select>
                    </div>
                    <div class="form-group mt-2">
                    <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                      <option selected>Is Head Active</option>
                          <option value="@true">Yes</option>
                          <option value="@false">No</option>
                    </select>
                    </div>
                    <div class="float-right">
                    <a class="btn btn-light" asp-controller="Setup" asp-action="Head">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                    </div>
                      </div>
                  </div>
                  
                    
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>

@section scripts{
                    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}