@model myWebApp.ViewModels.Setups.SubDepartmentVM
<div class="main-panel">
   <div class="content-wrapper">
          <div class="row">

            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Sub-Departments</h4>
                  @*<p class="card-description">
                    The Sub-Departments can be added here!
                  </p>*@
                  <div class="table-responsive">
                            @if (Model.subdepartments.Any())
                            {
                                        <table class="table table-hover table-bordered">
                                            <thead class="bg-primary text-white">
                                                <tr>
                                                    <th>Actions</th>
                                                    <th>Status</th>
                                                    <th>Sub Department Name</th>
                                                    <th>Main Department</th>
                                                    <th>Department Head</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                        @foreach (var subSubDepartment in Model.subdepartments)
                                        {
                                            <tr>
                                                <td class="actions">
                                                    <a class="fa fa-edit mr-3" asp-route-id="@subSubDepartment.SubDepartmentId" asp-controller="Setup" asp-action="UpdateSubDepartment" role="button"></a>
                                                    <a class="fa fa-trash text-danger" onclick="return confirm('Are you sure you want to delete?');" asp-route-id="@subSubDepartment.SubDepartmentId" asp-controller="Setup" asp-action="DeleteSubDepartment" role="button"></a>
                                                </td>
                                                <td>
                                                    @if ((bool)subSubDepartment.IsActive)
                                                    {
                                                        <label class="badge badge-success">Active</label>
                                                    }
                                                    else
                                                    {
                                                        <label class="badge badge-danger">InActive</label>
                                                    }
                                                </td>
                                                    <td>@subSubDepartment.SubDepartmentName</td>
                                                    <td>@subSubDepartment.MainDepartmentName</td>
                                                    <td>@subSubDepartment.HeadEmployee</td>
                                                </tr> 
                                        }
                                                      </tbody>
                                                    </table>
                            }
                            else
                            {
                                            <h3>No Data Found!</h3>
                            }
                  </div>
                </div>
              </div>
            </div>
            <div class="col-2 offset-10">
              <a class="btn btn-primary" asp-controller="Setup" asp-action="AddSubDepartment" role="button">Add</a>
            </div>
          </div>
        </div>
</div>
