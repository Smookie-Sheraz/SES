@model myWebApp.ViewModels.Task.AddTaskType

@{
}
       <div class="main-panel">        
        <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New TaskType</h4>
                  <p class="card-description">
                    Please Add The New TaskType and Press the Add Button.
                  </p>
                  <form class="forms-sample" method="post"
                  asp-controller="Task" asp-action="AddTaskType">
                    <div class="form-group">
                        <label asp-for="Code">TaskType Code</label>
                      <input type="text" class="form-control" asp-for="Code" placeholder="TaskType Code">
                    </div>
                    <div class="form-group">
                      <label asp-for="Description">TaskType Description</label>
                      <input type="text" class="form-control" asp-for="Description" placeholder="Enter TaskType Description">
                    </div>
                    <div class="form-check">
                      <label class="form-check-label" asp-for="IsActive">
                      <input class="form-check-input" type="checkbox" value="" asp-for="IsActive">
                        Active
                      </label>
                    </div>
                    <div class="float-right">
                    <a class="btn btn-light" asp-controller="Task" asp-action="TaskType">Cancel</a>
                        <button type="submit" class="btn btn-primary mr-2">Add</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
           </div>
          </div>
         </div>