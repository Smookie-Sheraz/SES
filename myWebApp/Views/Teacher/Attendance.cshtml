@model myWebApp.ViewModels.Teacher.StudentAttendanceVM
@section styles{
    <link href="~/modalwindoweffects-master/css/default.css" rel="stylesheet" />
    <link href="~/modalwindoweffects-master/css/component.css" rel="stylesheet" />
}
<div class="main-panel">
   <div class="content-wrapper">
            <form method="post"
              asp-controller="Teacher" asp-action="Attendance">
                <div class="row">
                    <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Student Attendance of Class: <label class="badge badge-success">@Model.ClassName</label></h4>
                                @*<p class="card-description">
                            The Sub-Topics allocated to the @ViewBag.Month !
                            </p>*@
                                <div class="table-responsive">
                                    @if (Model.AttendanceList.Any())
                                    {
                                        <table class="table table-hover table-bordered" id="SubTopicsTable">
                                            <thead class="bg-primary text-white">
                                                <tr>
                                                    <th colspan="1">Teacher:</th>
                                                    <th colspan="3"><label class="badge badge-success">@Model.TeacherName</label></th>
                                                    <th colspan="1">Class Name:</th>
                                                    <th colspan="2"><label class="badge badge-success">@Model.ClassName</label></th>
                                                </tr>
                                                <tr>
                                                    <th>S.No</th>
                                                    <th>Roll No</th>
                                                    <th>Student Name</th>
                                                    <th>Parent Name</th>
                                                    <th>Attendence Status</th>
                                                    <th>On Time/Late</th>
                                                    <th>Leave Application</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (var i = 0; i < Model.AttendanceList.Count(); i++)
                                                {
                                                int j = i + 1;
                                                if(Model.AttendanceList[i].LeaveStatus == "Approved")
                                                {
                                                    <tr>
                                                        <td>@j</td>
                                                        <td>@Model.AttendanceList[i].RollNo</td>
                                                        <td>@Model.AttendanceList[i].StudentName</td>
                                                        <td>@Model.AttendanceList[i].ParentName</td>
                                                        <td colspan="3" class="bg-success text-white">Approved Leave</td>
                                                    </tr>
                                                }
                                                <tr>
                                                    
                                                        <td>@j</td>
                                                        <td>@Model.AttendanceList[i].RollNo</td>
                                                        <td>@Model.AttendanceList[i].StudentName</td>
                                                        <td>@Model.AttendanceList[i].ParentName</td>
                                                        <td>
                                                            <input type="hidden" asp-for="@Model.AttendanceList[i].StudentId"/>
                                                            <input type="hidden" asp-for="@Model.AttendanceList[i].ClassId"/>
                                                            <div class="form-group">
                                                                <select class="form-select" asp-for="@Model.AttendanceList[i].AttendanceStatus">
                                                                    <option value="" selected>--Select--</option>
                                                                    <option value="Present">Present</option>
                                                                    <option value="Absent">Absent</option>
                                                                    <option value="Leave">Leave</option>
                                                                </select>
                                                                <span asp-validation-for="@Model.AttendanceList[i].AttendanceStatus" class="text-danger"></span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group">
                                                                <select class="form-select" asp-for="@Model.AttendanceList[i].OnTimeOrLate">
                                                                    <option value="" selected>--Select--</option>
                                                                    <option value="On Time">On Time</option>
                                                                    <option value="Late">Late</option>
                                                                </select>
                                                                <span asp-validation-for="@Model.AttendanceList[i].OnTimeOrLate" class="text-danger"></span>
                                                            </div>
                                                        </td>
                                                    <td>
                                                        @if (Model.AttendanceList[i].LeaveReason != null)
                                                        {
                                                            <button type="button" class="md-trigger btn btn-primary" data-modal="modal-@Model.AttendanceList[i].StudentId">Leave Application</button>
                                                        }
                                                        else
                                                        {
                                                            <button disabled type="button" class="md-trigger btn btn-primary" data-modal="modal-@Model.AttendanceList[i].StudentId">Leave Application</button>
                                                        }
                                                        <div class="row">
                                                            <div class="md-modal md-effect-16 col-12 col-md-8 col-lg-6" id="modal-@Model.AttendanceList[i].StudentId">
                                                                <div class="md-content">
                                                                    <h3>@Model.AttendanceList[i].StudentName Parent Has Applied For A Leave</h3>
                                                                    <div>
                                                                        @*<p class="h4">@role.RoleName has the permission(s) mentioned below.</p>*@
                                                                        <div class="row" style="height:300px; overflow:auto;">
                                                                            <table>
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>Reason</th>
                                                                                        <th>Start Date</th>
                                                                                        <th>End Date</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <tr>
                                                                                        <td>@Model.AttendanceList[i].LeaveReason</td>
                                                                                        <td>@Model.AttendanceList[i].StartDate</td>
                                                                                        <td>@Model.AttendanceList[i].EndDate</td>
                                                                                    </tr>
                                                                                </tbody>
                                                                            </table>
                                                                            @*@foreach (var perm in role.Permissions
                                                                            {
                                                                                <label class="fs-6 badge badge-success col-6 col-md-4 col-lg-3 mt-2">@perm</label>
                                                                            }*@
                                                                            <div class="form-group">
                                                                                <label asp-for="@Model.AttendanceList[i].LeaveResponse">Response to Application</label>
                                                                                <select asp-for="@Model.AttendanceList[i].LeaveResponse" class="form-select" aria-label="Default select example">
                                                                                    <option selected value="@null">Select Response Please</option>
                                                                                    <option value="Approved">Approve</option>
                                                                                    <option value="Rejected">Reject</option>
                                                                                </select>
                                                                                @*<span asp-validation-for="@Model.AttendanceList[i].LeaveResponse" class="text-danger"></span>*@
                                                                            </div>d
                                                                            <input type="hidden" asp-for="@Model.AttendanceList[i].StartDate"/>
                                                                        </div>
                                                                        <button type="button" class=" btn-sm btn md-close btn-warning fw-bold mt-4" onclick="pWindowCancelButton(@Model.AttendanceList[i].StudentId)">Close me!</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="md-overlay"></div>
                                                    </td>
                                                </tr>
                                                @*j++;*@
                                            }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <h3>Currently Only Class Teacher Can Mark The Attendance!</h3>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.AttendanceList.Count != 0)
                    {
                        <div class="col-2 offset-10">
                            <button type="submit" asp-for="SubTopicAllocation(@Model.AttendanceList)" class="btn btn-primary mr-2">Mark</button>
                        </div>
                    }
                </div>
            </form>
   </div>
</div>
@section scripts{
    <script src="~/js/custom.js"></script>
    <script src="~/modalwindoweffects-master/js/classie.js"></script>
    <script src="~/modalwindoweffects-master/js/modaleffects.js"></script>
        <script>
        $(document).ready(function () {
            $('#SubTopicsTable').DataTable({
                    serverSide: true,
                    ajax: function(){

                    },
                });
        });
        </script>
}