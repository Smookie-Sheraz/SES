@model myWebApp.ViewModels.Director.RolesVM
@{
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Role</h4>
                        <form class="forms-sample" method="post"
                              asp-controller="Director" asp-action="UpdateRole">
                            <div class="row justify-content-between">
                                <input type="hidden" asp-for="RoleId" />
                                <div class="col-12 col-md-6 col-lg-3">
                                    @*<div class="form-group">
                                        <label asp-for="RoleName">Roll Name</label>
                                        <input type="text" class="form-control" asp-for="RoleName" placeholder="Enter Roll Name" />
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-2">
                                        <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                                            <option selected value="@null">Is Role Active</option>
                                            <option value="@true">Yes</option>
                                            <option value="@false">No</option>
                                        </select>
                                    </div>*@
                                </div>
                                <div class="col-1 mt-4">
                                    <button type="button" class="btn btn-sm btn-success" onclick="SelectAllPermissions()">Select All</button>
                                </div>
                            </div>
                            <div class="row">
                                @for (var per = 0; per < Model.AddUpdatePermissions.Count(); per++)
                                {
                                    <input type="hidden" asp-for="@Model.AddUpdatePermissions[per].PermissionId" />
                                    <input type="hidden" asp-for="@Model.AddUpdatePermissions[per].PermissionName" />
                                    <div class="col-2 mt-2">
                                        <div class="form-check">
                                            <label class="form-check-label badge badge-info"><input type="checkbox" class="form-check-input" asp-for="@Model.AddUpdatePermissions[per].isSelected" />@Model.AddUpdatePermissions[per].PermissionName</label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-4">
                                    <div class="float-right">
                                        <a class="btn btn-light" asp-controller="Director" asp-action="Roles">Cancel</a>
                                        <button type="submit" asp-for="RolesVM(@Model.AddUpdatePermissions)" class="btn btn-primary mr-2">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/Custom.js"></script>
}