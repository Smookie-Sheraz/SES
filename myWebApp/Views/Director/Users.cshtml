@model IEnumerable<Entities.Models.User>
@{
    int i = -1;
}
<div class="main-panel">
   <div class="content-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Users/Login Authorities</h4>
                  @*<p class="card-description">
                    The Books can be added here!
                  </p>*@
                  <div class="table-responsive">
                            @if (Model.Any())
                            {
                            <table class="table table-hover table-bordered" id="UsersTable">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>Actions</th>
                                        <th>Active</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Father's Name</th>
                                        <th>Email</th>
                                        @*<th>Picture</th>*@
                                        <th>Username</th>
                                        <th>Password</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach (var user in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td class="actions">
                                                    <a class="fa fa-edit mr-3" title="Edit User" asp-route-id="@user.UserId" asp-controller="Director" asp-action="UpdateUser" role="button"></a>
                                                    <a class="fa fa-trash text-danger" title="Delete Book" onclick="return confirm('Are you sure you want to remove?');" asp-route-id="@user.UserId" asp-controller="Director" asp-action="DeleteUser" role="button"></a>
                                                </td>
                                                <td>
                                                    @if ((bool)user.IsActive)
                                                    {
                                                                <label class="badge badge-success">Active</label>
                                                    }
                                                    else
                                                    {
                                                                <label class="badge badge-danger">InActive</label>
                                                    }
                                                </td>
                                                <td>@user.FName</td>
                                                <td>@user.LName</td>
                                                <td>@user.FatherName</td>
                                                <td>@user.Email</td>
                                                @*<td><img src="~/usersimages/@user.UserImageURL" height=100 width=100/></td>*@
                                                <td>@user.UserName</td>
                                                <td>@user.Password</td>
                                                <td>@user.Role</td>
                                            </tr>
                                        }
                                </tbody>
                            </table>
                            }
                            else
                            {
                            <h3>No Users Found!</h3>
                            }
                  </div>
                </div>
              </div>
            </div>
           @* <div class="col-2 offset-10">
              <a class="btn btn-primary" asp-controller="Director" asp-action="AddUser" role="button">Add</a>
            </div>*@
          </div>
        </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#UsersTable').DataTable();
        });
    </script>
}